<div class="header-row">
  <div class="header-column">
    <h1>Eat-Da-Burger!</h1>
  </div>
</div>

<div class="row">
    <div class="column">
      <h2>Select a Burger</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <h3>{{this.burger_name}}</h3>
          <button burgerId={{this.id}} class="devour-status">Devour</button>
          {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="column">
      <h2>Eaten Burgers!</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured }}
          <h3>{{this.burger_name}}</h3>
          {{/if}}
          {{/each}}
        </ul>
    </div>
</div>

<div class="input-row">
  <div class="input-column">
    <h2>Eat Your Own Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger-name" name="name">
      </div>

      <button type="submit" id="submit-button">Add New Burger</button>
    </form>
  </div>
</div>